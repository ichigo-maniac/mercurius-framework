<?xml version="1.0" encoding="UTF-8"?>

<config xmlns="http://mercurius-framework.org/mmc-config">

    <!-- Admin tree node view -->
    <tree-nodes-view roles="ROLE_ADMIN" priority="0">
        <!-- Catalog -->
        <tree-node title="mmc.tree.view.catalog.label">
            <tree-node-entity-element entity-name="Catalog"/>
            <tree-node-entity-element entity-name="Product"/>
            <tree-node-entity-element entity-name="Category"/>
            <tree-node-entity-element entity-name="Unit"/>
            <tree-node title="mmc.tree.view.catalog.features.label">
                <tree-node-entity-element entity-name="Feature"/>
                <tree-node-entity-element entity-name="FeatureValue"/>
            </tree-node>
        </tree-node>
        <!-- Store -->
        <tree-node title="mmc.tree.view.store.label">
            <tree-node-entity-element entity-name="Store"/>
            <tree-node-entity-element entity-name="Warehouse"/>
            <tree-node-entity-element entity-name="Stock"/>
        </tree-node>
        <!-- Prices -->
        <tree-node title="mmc.tree.view.prices.label">
            <tree-node-entity-element entity-name="Price"/>
        </tree-node>
        <!-- Users -->
        <tree-node title="mmc.tree.view.users.label">
            <tree-node-entity-element entity-name="Employee"/>
            <tree-node-entity-element entity-name="Customer"/>
            <tree-node-entity-element entity-name="Role"/>
        </tree-node>
    </tree-nodes-view>

    <!-- Other roles tree node view -->
    <tree-nodes-view priority="0">
        <!-- Catalog -->
        <tree-node title="mmc.tree.view.catalog.label">
            <tree-node-entity-element entity-name="Product"/>
            <tree-node-entity-element entity-name="Category"/>
            <tree-node-entity-element entity-name="Unit"/>
        </tree-node>
    </tree-nodes-view>

</config>
